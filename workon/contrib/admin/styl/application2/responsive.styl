    .sidebar
        z(-1); ts(translateY(-100%)); op(0);

        html.nav-expanded &
           ts(translateY(0)); w(60); op(1);

    #content
        pl(0);
        html.nav-expanded &
            pl(60)


    .main
        .panel
            m(-14); mb(14);
            .panel-body
                p(0);




    #changelist-search
        fx(60,0,,60,-1); op(0); p(15); bg(darker-color); tr-cl();
        html.nav-expanded &
            op(1); z(1);


    table

        thead, tbody
            db();
            tr
                db(); w(100%);
                th, td
                    db();

