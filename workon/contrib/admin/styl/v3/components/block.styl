    background: linear-gradient(135deg,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.05) 70%,rgba(0,0,0,0.07) 95%,rgba(0,0,0,0.17) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: "progid:DXImageTransform.Microsoft.gradient( startColorstr='#00000000', endColorstr='#0d000000',GradientType=1 )"; /* IE6-9 fallback on horizontal gradient */


.tabs.block
    > .tabs-content
        p(0);