/* Positions */
l(n)
	left unitx(n)
r(n)
	right unitx(n)
t(n)
	top unitx(n)
b(n)
	bottom unitx(n)
z(n)
	z-index n

po(n, t=null,r=null,b=null,l=null,z=null)
	position n
	if t is a 'unit'
		t(t);
	if t == "auto"
		t(auto)

	if r is a 'unit'
		r(r);
	if r == "auto"
		r(auto)

	if b is a 'unit'
		b(b);
	if b == "auto"
		b(auto)

	if l is a 'unit'
		l(l);
	if l == "auto"
		l(auto)

	if z is a 'unit'
		z(z);
	if z == "auto"
		z(auto)

ab(t=null,r=null,b=null,l=null,z=null)
	po absolute,t,r,b,l,z
pa(t=null,r=null,b=null,l=null,z=null)
	po absolute,t,r,b,l,z

ps()
	po static

fx(t=null,r=null,b=null,l=null,z=null)
	po fixed,t,r,b,l,z

rl(t=null,r=null,b=null,l=null,z=null)
	po relative,t,r,b,l,z







